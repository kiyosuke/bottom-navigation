<?xml version="1.0" encoding="utf-8"?>
<androidx.consztraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.kiyosuke.bottomnavigation.BottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tabIconTint="@color/colorPrimary"
        app:tabTextColor="@android:color/black" />

</androidx.consztraintlayout.widget.ConstraintLayout>